{
  "@load": "./@resource.json",
  "domainName": "run.tools",
  "contentDirectory": "./builds/prod",
  "bundler": {
    "output": "./dist/bundle.prod.js",
    "replacements": {
      "process.env.NODE_ENV": "'production'"
    },
    "reinstallDependencies": true,
    "minify": true
  },
  "copier": {
    "destinationDirectory": "./builds/prod",
    "clearDestination": true,
    "files": [
      {
        "source": "./index.html",
        "replacements": {
          "$REACT_URL$": "https://unpkg.com/react@16.2.0/umd/react.production.min.js",
          "$REACT_DOM_URL$": "https://unpkg.com/react-dom@16.2.0/umd/react-dom.production.min.js"
        }
      },
      {
        "source": "./dist/bundle.prod.js",
        "destination": "./bundle.js"
      },
      "./images"
    ]
  },
  "freezer": {
    "sourceDirectory": "./builds/prod"
  }
}
